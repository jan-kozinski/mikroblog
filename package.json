    "colors": "^1.4.0",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.25",
    "multer": "^1.4.2",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
